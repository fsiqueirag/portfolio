---
interface Props {
  variant: "primary" | "secondary";
  type?: "button" | "submit" | "reset";
  href?: string;
  class?: string;
}

const { type = "button", variant, href, class: className } = Astro.props;
---

{
  !href ? (
    <button
      type={type}
      class:list={[
        "px-10 py-3 rounded-sm uppercase font-bold text-xl tracking-wide inline-block",
        variant === "primary"
          ? "bg-neutral-800 text-white hover:bg-transparent hover:text-neutral-800 border-2 border-neutral-800"
          : "bg-gray-500 text-black",
        className,
      ]}
    >
      <slot />
    </button>
  ) : (
    <a
      href={href}
      class:list={[
        "px-10 py-3 rounded-sm uppercase font-bold text-xl tracking-wide inline-block transition-colors ease-in-out duration-200",
        variant === "primary"
          ? "bg-neutral-800 text-white hover:bg-transparent hover:text-neutral-800 border-2 border-neutral-800"
          : "bg-gray-500 text-black",
        className,
      ]}
    >
      <slot />
    </a>
  )
}
