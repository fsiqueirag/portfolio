  { url: "https://github.com/fsiqueirag", Icon: Github },
  {
    url: "https://www.linkedin.com/in/fabrizio-siqueira-giampietro-876661186/",
    Icon: Linkedin,
  },
  { url: "mailto:fabrizio.siqueira@hotmail.com", Icon: Email },
